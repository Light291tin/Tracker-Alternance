{% extends 'base.html.twig' %}

{% block title %}Application index{% endblock %}

{% block body %}
    <h1>Application index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Company</th>
                <th>Platform</th>
                <th>AppliedAt</th>
                <th>Status</th>
                <th>InterviewDate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for application in applications %}
            <tr>
                <td>{{ application.id }}</td>
                <td>{{ application.company }}</td>
                <td>{{ application.platform }}</td>
                <td>{{ application.appliedAt ? application.appliedAt|date('Y-m-d') : '' }}</td>
                <td>{{ application.status }}</td>
                <td>{{ application.interviewDate ? application.interviewDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_application_show', {'id': application.id}) }}">show</a>
                    <a href="{{ path('app_application_edit', {'id': application.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_application_new') }}">Create new</a>
{% endblock %}
