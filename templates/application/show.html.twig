{% extends 'base.html.twig' %}

{% block title %}Application{% endblock %}

{% block body %}
    <h1>Application</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ application.id }}</td>
            </tr>
            <tr>
                <th>Company</th>
                <td>{{ application.company }}</td>
            </tr>
            <tr>
                <th>Platform</th>
                <td>{{ application.platform }}</td>
            </tr>
            <tr>
                <th>AppliedAt</th>
                <td>{{ application.appliedAt ? application.appliedAt|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ application.status }}</td>
            </tr>
            <tr>
                <th>InterviewDate</th>
                <td>{{ application.interviewDate ? application.interviewDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_application_index') }}">back to list</a>

    <a href="{{ path('app_application_edit', {'id': application.id}) }}">edit</a>

    {{ include('application/_delete_form.html.twig') }}
{% endblock %}
