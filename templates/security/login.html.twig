{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<style>
    /* 1. On cache la barre de navigation standard */
    nav.navbar { display: none !important; }

    /* 2. L'image de fond (Montagne / Coucher de soleil) */
    body {
        background: url('https://images.unsplash.com/photo-1483728642387-6c3bdd6c93e5?q=80&w=2076&auto=format&fit=crop') no-repeat center center fixed; 
        background-size: cover;
        font-family: 'Segoe UI', sans-serif;
        color: white; /* Tout le texte en blanc */
        height: 100vh;
        margin: 0;
        overflow: hidden;
    }

    /* Un voile noir par dessus l'image pour que le texte soit lisible */
    .overlay {
        background: rgba(0, 0, 0, 0.5); /* 50% de noir */
        position: absolute; top: 0; left: 0; width: 100%; height: 100%;
        z-index: 1;
    }

    /* Le conteneur principal par dessus le voile */
    .content-wrapper {
        position: relative;
        z-index: 2; /* Au dessus du voile */
        display: flex;
        height: 100vh;
        width: 100%;
        align-items: center;
        justify-content: center;
    }

    .container-split {
        width: 80%;
        max-width: 1200px;
        display: flex;
        flex-wrap: wrap; /* Pour mobile */
        justify-content: space-between;
        align-items: center;
    }

    /* --- PARTIE GAUCHE (Welcome Back) --- */
    .left-side {
        flex: 1;
        padding-right: 50px;
    }

    .left-side h1 {
        font-size: 4rem; /* Très gros titre */
        font-weight: 800;
        margin-bottom: 20px;
        line-height: 1.1;
    }

    .left-side p {
        font-size: 1.1rem;
        opacity: 0.8;
        line-height: 1.6;
        max-width: 500px;
    }

    /* --- PARTIE DROITE (Formulaire) --- */
    .right-side {
        flex: 0 0 400px; /* Largeur fixe pour le formulaire */
        padding: 40px;
        /* Fond légèrement vitré */
        background: rgba(255, 255, 255, 0.1); 
        backdrop-filter: blur(5px); /* Effet flou moderne */
        border-radius: 15px;
        border: 1px solid rgba(255,255,255,0.2);
    }

    .right-side h2 {
        font-size: 2rem;
        margin-bottom: 30px;
        font-weight: 600;
    }

    /* Inputs personnalisés */
    .custom-label {
        display: block;
        margin-bottom: 8px;
        font-size: 0.9rem;
        font-weight: 500;
    }

    .custom-input {
        width: 100%;
        padding: 15px;
        margin-bottom: 20px;
        border: none;
        border-radius: 5px;
        font-size: 1rem;
        color: #333; /* Texte noir dans l'input */
        background: #fff;
    }
    .custom-input:focus {
        outline: 3px solid #e65100; /* Bordure orange au clic */
    }

    /* Bouton Orange */
    .btn-orange {
        width: 100%;
        padding: 15px;
        background-color: #e65100; /* Orange brûlé */
        color: white;
        font-weight: bold;
        border: none;
        border-radius: 5px;
        font-size: 1.1rem;
        cursor: pointer;
        transition: 0.3s;
    }
    .btn-orange:hover {
        background-color: #bf360c;
    }

    .links {
        margin-top: 20px;
        font-size: 0.9rem;
    }
    .links a {
        color: #ffcc80; /* Lien orange clair */
        text-decoration: none;
    }
    .links a:hover { text-decoration: underline; }

    /* Mobile */
    @media (max-width: 768px) {
        .content-wrapper { height: auto; padding: 50px 0; }
        .container-split { flex-direction: column; width: 90%; }
        .left-side { padding-right: 0; margin-bottom: 40px; text-align: center; }
        .left-side h1 { font-size: 2.5rem; }
        .right-side { width: 100%; }
    }
</style>

<div class="overlay"></div>

<div class="content-wrapper">
    <div class="container-split">
        
        <div class="left-side">
            <h1>Welcome<br>Back</h1>
            <p>
                Heureux de vous revoir sur le Tracker d'Alternance. 
                Gérez vos candidatures dans un environnement calme et focus.
            </p>
        </div>

        <div class="right-side">
            <h2>Sign in</h2>

            <form method="post">
                {% if error %}
                    <div class="alert alert-danger" style="background: rgba(220, 53, 69, 0.8); color: white; border: none; padding: 10px; border-radius: 5px; margin-bottom: 15px;">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                <label class="custom-label">Email Address</label>
                <input type="email" value="{{ last_username }}" name="email" class="custom-input" required autofocus>

                <label class="custom-label">Password</label>
                <input type="password" name="password" class="custom-input" required>

                {# C'est cette ligne qui empêche l'erreur CSRF #}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div style="margin-bottom: 20px;">
                    <input type="checkbox" id="remember_me" name="_remember_me">
                    <label for="remember_me" style="font-size: 0.9rem; margin-left: 5px;">Se souvenir de moi</label>
                </div>

                <button class="btn-orange" type="submit">
                    Sign in now
                </button>

                {# ICI : J'ai mis le lien qui fonctionne pour le mot de passe oublié #}
                <div class="links">
                    <a href="{{ path('app_forgot_password_request') }}">Mot de passe oublié ?</a>
                    <br><br>
                    Pas encore de compte ? <a href="{{ path('app_register') }}">Créer un compte</a>
                </div>
            </form>
        </div>

    </div>
</div>
{% endblock %}