{% extends 'base.html.twig' %}

{% block title %}Réinitialiser le mot de passe{% endblock %}

{% block body %}
<style>
    /* On cache la barre de navigation */
    nav.navbar { display: none !important; }

    /* IMAGE DE FOND (Montagne - idem Login) */
    body {
        background: url('https://images.unsplash.com/photo-1483728642387-6c3bdd6c93e5?q=80&w=2076&auto=format&fit=crop') no-repeat center center fixed; 
        background-size: cover;
        font-family: 'Segoe UI', sans-serif;
        color: white;
        height: 100vh;
        margin: 0;
        overflow: hidden;
    }

    .overlay {
        background: rgba(0, 0, 0, 0.5);
        position: absolute; top: 0; left: 0; width: 100%; height: 100%; z-index: 1;
    }

    .content-wrapper { 
        position: relative; z-index: 2; 
        display: flex; height: 100vh; width: 100%; 
        align-items: center; justify-content: center; 
    }
    
    .container-split { 
        width: 80%; max-width: 1200px; 
        display: flex; flex-wrap: wrap; 
        justify-content: space-between; align-items: center; 
    }

    /* GAUCHE */
    .left-side { flex: 1; padding-right: 50px; }
    .left-side h1 { font-size: 3.5rem; font-weight: 800; margin-bottom: 20px; line-height: 1.1; }
    .left-side p { font-size: 1.1rem; opacity: 0.9; max-width: 500px; }

    /* DROITE (Formulaire) */
    .right-side {
        flex: 0 0 400px; padding: 40px;
        background: rgba(255, 255, 255, 0.1); 
        backdrop-filter: blur(5px); border-radius: 15px; border: 1px solid rgba(255,255,255,0.2);
    }
    .right-side h2 { font-size: 1.8rem; margin-bottom: 20px; }

    /* Inputs */
    .custom-label { display: block; margin-bottom: 8px; font-size: 0.9rem; }
    .custom-input { width: 100%; padding: 15px; border: none; border-radius: 5px; font-size: 1rem; color: #333; background: #fff; margin-bottom: 20px;}
    
    .btn-orange {
        width: 100%; padding: 15px; background-color: #e65100;
        color: white; font-weight: bold; border: none; border-radius: 5px; 
        font-size: 1.1rem; cursor: pointer; transition: 0.3s;
    }
    .btn-orange:hover { background-color: #bf360c; }

    .back-link { display: block; text-align: center; margin-top: 20px; }
    .back-link a { color: #ffcc80; text-decoration: none; }
</style>

<div class="overlay"></div>

<div class="content-wrapper">
    <div class="container-split">
        <div class="left-side">
            <h1>Récupération<br>de compte</h1>
            <p>
                Ça arrive même aux meilleurs. 
                Entrez votre email et nous vous enverrons un lien magique pour reprendre le contrôle.
            </p>
        </div>

        <div class="right-side">
            <h2>Mot de passe oublié ?</h2>

            {{ form_start(requestForm) }}
                
                {# Affiche les erreurs globales #}
                {% for flash_error in app.flashes('reset_password_error') %}
                    <div class="alert alert-danger" role="alert" style="color: #ff8a80; margin-bottom: 15px;">{{ flash_error }}</div>
                {% endfor %}

                <label class="custom-label">Votre Email</label>
                {{ form_widget(requestForm.email, {'attr': {'class': 'custom-input', 'placeholder': 'exemple@email.com'}}) }}
                
                <button class="btn-orange" type="submit">Envoyer le lien</button>
            {{ form_end(requestForm) }}

            <div class="back-link">
                <a href="{{ path('app_login') }}">← Retour à la connexion</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}